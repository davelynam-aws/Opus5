@model OPUS_Demo_5.ViewModels.QuoteViewModel
<!-- Modal -->
<div class="modal fade" id="add-bifolditem" tabindex="-1" role="dialog" aria-labelledby="addBifoldItemLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addBifoldItemLabel">Add Bifold Item</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @*add hidden input field to form to validate model state*@
                <form asp-action="Create">
                    <input name="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()" />
      



                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                @*data-save attribute identifies the correct element to attach the "Save" to*@
                <button type="button" class="btn btn-primary" data-save="modal">Save</button>
            </div>
        </div>
    </div>
</div>